<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ftkj.yunti_test.activity.ElevatorSelectActivity">
    <include layout="@layout/common_toolbar_text"/>
    <LinearLayout
        android:padding="@dimen/x15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/elevator_ac_tv"
        android:textSize="@dimen/x18"
        android:text="行政区"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/y20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Spinner
            android:layout_weight="1"
            android:id="@+id/spin_provice"
            android:layout_marginTop="@dimen/y10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
            <Spinner
                android:layout_weight="1"
                android:id="@+id/spin_city"
                android:layout_marginTop="@dimen/y10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:id="@+id/spin_area"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/y10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/y20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="街道"
                android:textSize="@dimen/x18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:text="小区"
                android:textSize="@dimen/x18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/y20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:layout_weight="1"
                android:id="@+id/spin_street"
                android:layout_marginTop="@dimen/y10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <Spinner
                android:layout_weight="1"
                android:layout_marginTop="@dimen/y10"
                android:layout_below="@id/elevator_ac_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/y20"
            android:text="楼梯与楼号"
            android:textSize="@dimen/x18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Spinner
            android:layout_marginTop="@dimen/y20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>
    <Button
        android:id="@+id/elevator_ac_next_btn"
        android:text="下一步"
        android:layout_gravity="center"
        android:layout_width="@dimen/x400"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/y15"
        android:layout_gravity="center"
        android:textSize="@dimen/x14"
        android:text="没有找到电梯？点击此处手动填写"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
