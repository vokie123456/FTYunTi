<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.example.ftkj.yunti_test.fragments.AssemFragment">
<include layout="@layout/common_toolbar"/>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#1877ec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200">
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y50"
            android:drawablePadding="@dimen/y10"
            android:drawableTop="@drawable/ic_add"
            android:textColor="#ffffff"
            android:text="装配电梯"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y50"
            android:drawablePadding="@dimen/y10"
            android:drawableTop="@drawable/ic_test"
            android:textColor="#ffffff"
            android:text="网络测试"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/y50"
            android:drawablePadding="@dimen/y10"
            android:drawableTop="@drawable/ic_more"
            android:textColor="#ffffff"
            android:text="更多工具"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/list_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/norecord_notify"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_norecord"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_no_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/y20"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/image_norecord"
                android:text="最近三天暂无装配记录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </FrameLayout>



</LinearLayout>
